<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bacground"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textFatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FacturaciÃ³n"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginTop="56dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textnumfact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de facturas: "
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="67dp"
            android:layout_marginEnd="66dp"
            app:layout_constraintRight_toRightOf="@+id/textnum"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textnum" />

        <TextView
            android:id="@+id/textnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="62dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/textFatura" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/ic_action_facturarenviar"
            android:onClick="setEviarFacturas"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textnumfact" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>